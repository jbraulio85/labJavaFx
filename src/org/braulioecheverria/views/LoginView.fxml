<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.braulioecheverria.controller.LoginController">
    <children>
        <Label layoutX="42.0" layoutY="20.0" prefHeight="33.0" prefWidth="125.0" text="Bienvenido" textAlignment="CENTER" textFill="#2505b4">
            <font>
                <Font name="Yu Gothic Medium" size="24.0" />
            </font>
        </Label>
        <Label layoutX="74.0" layoutY="73.0" text="Usuario">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="44.0" layoutY="129.0" text="Contraseña">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="txtUsuario" layoutX="167.0" layoutY="74.0" prefHeight="27.0" prefWidth="236.0" promptText="Ingrese usuario" />
        <PasswordField fx:id="txtPassword" layoutX="167.0" layoutY="130.0" prefHeight="27.0" prefWidth="237.0" promptText="Ingrese contraseña" />
        <Button fx:id="btnAceptar" layoutX="185.0" layoutY="175.0" mnemonicParsing="false" onAction="#eventoAceptar" text="Aceptar" textFill="#027c04">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button fx:id="btnCancelar" layoutX="294.0" layoutY="175.0" mnemonicParsing="false" onAction="#eventoCancelar" text="Cancelar" textFill="#ce1b04">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Label fx:id="lblRegistrarse" layoutX="351.0" layoutY="225.0"  onMouseClicked="#eventoRegistrarse" text="Registrarse" textFill="#0377c5">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>

